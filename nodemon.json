{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    "dist"
  ],
  "verbose": true,
  "execMap": {
    "js": "node"
  },
  
  "runOnChangeOnly": false,
  "watch": [
    "src/**/*.js",
    "src/**/*.graphql",
    "src/**/*.gql"
  ],
  "env": {
    "NODE_ENV": "development",
    "JWT_SECRET": "Secret"
  },
  "ext": "js,json,graphql"
}
